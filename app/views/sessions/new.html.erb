<div class="m-auto col-3">
<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
 <div>
   <%= label_tag :email %>
   <%= text_field_tag :email , "", class:'form-control' %>
 </div>
 <div>
   <%= label_tag :password %>
   <%= password_field_tag :password , "", class:'form-control' %>
 </div>
 <div class='actions'>
   <%= submit_tag 'Login', class: 'btn btn-primary mt-3' %>
 </div>
<% end %>
</div>
