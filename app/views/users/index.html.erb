<%= link_to 'Create User', new_user_path, class: 'btn btn-primary mt-3' %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-secondary' %>
      <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure to delete?' }, class: 'btn btn-sm btn-danger' %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
